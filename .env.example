# Обязательно укажи /api/v4 в конце
GITLAB_BASE_URL=https://gitlab.example.com/api/v4
# Персональный токен (api scope)
GITLAB_TOKEN=glpat-XXXXXXXXXXXXXXXXXXXXXXXX

# Необязательные параметры
GITLAB_PER_PAGE=100
REQUEST_TIMEOUT_S=30

# UI автообновление (в секундах)
UI_AUTO_REFRESH_ENABLED=true
UI_AUTO_REFRESH_SEC=15

# Переписывать абсолютные редиректы GitLab на относительные (для base_url)
GITLAB_REWRITE_REDIRECTS=true
